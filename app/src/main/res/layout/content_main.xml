<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="stembeyond.uiuc.com.pickone.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="@color/green">

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/welcomeTitle"
        android:text="PickOne"
        android:textColor="@color/black_color"
        android:textSize="70dp"/>

    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/dp"
        android:src="@drawable/test"
        android:layout_below="@id/welcomeTitle"
        app:civ_border_color="#000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        app:civ_border_width="5dp"
        app:civ_shadow="true"
        app:civ_shadow_radius="10"
        app:civ_shadow_color="#000000"/>

    <!--
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/dp"
        android:src="@drawable/test"
        android:layout_below="@id/welcomeTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />
    -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/main_username"
        android:textAlignment="center"
        android:textSize="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_below="@id/dp"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/dp"
        android:background="@drawable/rounded_buttons"
        android:textColor="@color/white_color"
        android:layout_marginTop="30dp"
        android:text="Account"
        android:id="@+id/accountButton" />

    <Button
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/accountButton"
        android:background="@drawable/rounded_buttons"
        android:textColor="@color/white_color"
        android:layout_marginTop="10dp"
        android:text="Categories"
        android:id="@+id/categoriesButton" />

    <Button
        android:layout_width="250dp"
        android:background="@drawable/rounded_buttons"
        android:textColor="@color/white_color"
        android:textSize="20dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/categoriesButton"
        android:layout_centerHorizontal="true"
        android:text="Profile"
        android:id="@+id/profileButton" />

</RelativeLayout>
